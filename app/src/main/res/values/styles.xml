<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Buttons -->

    <style name="PrimaryButton" parent="BoldText">
        <item name="android:background">@drawable/bg_primary_btn</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Text -->
    <style name="TitleText">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/bg_text</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="CardView_cv" parent="BoldText">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BoldText" parent="BaseText">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="RegularText" parent="BaseText">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="LightText" parent="BaseText">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="BaseText">
        <item name="android:includeFontPadding">false</item>
    </style>


</resources>
